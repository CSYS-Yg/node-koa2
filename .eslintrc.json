{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "env": {
    "es6": true,
    "commonjs": true,
    "node": true
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true //是否支持模板语法
      }
    ],
    "semi": ["error", "never"]
  }
}
